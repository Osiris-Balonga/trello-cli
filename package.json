{
  "name": "@osirisbalonga/trello-cli",
  "version": "1.0.0",
  "description": "Manage your Trello cards from the terminal. Create, move, and track tasks without leaving your development environment.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tt": "./dist/cli.js",
    "trello-cli": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "local:install": "pnpm build && pnpm link --global",
    "local:uninstall": "pnpm unlink --global",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "keywords": [
    "trello",
    "cli",
    "task-management",
    "productivity",
    "terminal"
  ],
  "author": "Osiris Balonga",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/osirisbalonga/trello-cli.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "@inquirer/prompts": "^7.2.0",
    "axios": "^1.13.2",
    "boxen": "^8.0.1",
    "chalk": "^5.4.0",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "conf": "^13.0.1",
    "date-fns": "^4.1.0",
    "i18next": "^24.1.0",
    "keytar": "^7.9.0",
    "open": "^11.0.0",
    "ora": "^8.1.1",
    "p-limit": "^6.2.0",
    "simple-git": "^3.27.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/cli-progress": "^3.11.6",
    "@types/keytar": "^4.4.2",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0",
    "vitest": "^2.1.8"
  }
}
